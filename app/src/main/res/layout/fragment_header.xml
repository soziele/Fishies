<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#62F698"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fishes_header_icon"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:scaleX="0.8"
                    android:scaleY="1"
                    android:src="@drawable/fish"
                    app:srcCompat="@drawable/fish"
                    tools:srcCompat="@drawable/fish" />

                <TextView
                    android:id="@+id/fishes_header"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:text="300/300"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/money_header_icon"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:src="@drawable/dollar"
                    app:srcCompat="@drawable/dollar"
                    tools:srcCompat="@drawable/dollar" />

                <TextView
                    android:id="@+id/money_header"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:text="56 000"
                    android:textSize="16dp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/level_header"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="#FFC400"
            android:backgroundTint="#00E676"
            android:backgroundTintMode="add"
            android:paddingTop="20dp"
            android:text="1 lvl"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/sell_button"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:foregroundTint="#FF9100"
            android:text="Sell" />
    </LinearLayout>
</LinearLayout>